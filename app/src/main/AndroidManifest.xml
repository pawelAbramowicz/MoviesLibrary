<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pawel.moviesapp">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainScreen.Activity_Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MovieDetails.Activity_MovieDetails"
            android:label="Film details"></activity>
        <activity
            android:name=".SearchScreen.Activity_Search"
            android:label="Search movie"></activity>

        <activity
            android:name=".ActorDetails.Activity_ActorDetails"
            android:label="Actor details"></activity>
        <activity
            android:name=".WatchListScreen.Activity_WatchList"
            android:label="Watch list"></activity>
    </application><!-- android:theme="@style/Theme.AppCompat.Dialog"-->

</manifest>